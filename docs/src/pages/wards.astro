---
import { Content as WardContent, frontmatter } from "../contents/ward.mdx";
import BaseLayout from "../layouts/BaseLayout.astro";
import DashboardLayout from "../layouts/DashboardLayout.astro";
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} sidebar>
    <DashboardLayout>
        <main class="mx-auto">
            <article>
                <h1 class="text-4xl mb-3 font-bold">
                    Ward
                </h1>
                <WardContent />
            </article>
        </main>
    </DashboardLayout>
</BaseLayout>

<style lang="scss">
    pre {
        @apply mb-6;
        border: 3px solid red !important;
    }
</style>