---
export interface Props {
	title: string;
	description?: string;
	sidebar?: boolean;}

const { title, description } = Astro.props;

---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		{
			description && <meta name="description" content={description} />
		}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href={import.meta.env.PROD ? `/pc-vn/assets/main.css` : '/assets/main.css'}>
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<slot name="footer" />
	</body>
</html>
<style is:global lang="scss">
	html, body {
		@apply w-full font-vietnam bg-secondary;
		min-height: 100%;
	}

	code, kbd, samp, pre {
		@apply font-ibm-plex text-left pb-4 rounded;
	}

	code .line {
		@apply inline-block w-full ps-5 pe-5;
	}

	pre:before {
		content: "";
		@apply inline-block bg-slate-500 w-full mb-3 rounded-t;
		height: 20px;
	}
</style>
